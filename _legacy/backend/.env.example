# Server Configuration
# NODE_ENV: Environment mode (development, production, test)
NODE_ENV=development
# PORT: Port for the HTTP API server
PORT=3000
# GPS_PORT: Port for the TCP GPS server (GT06 protocol)
GPS_PORT=5023

# Database Configuration
# DATABASE_URL: PostgreSQL connection string (postgresql://user:password@host:port/database)
DATABASE_URL=postgresql://user:password@localhost:5432/gps_tracking

# Security
# JWT_SECRET: Secret key for signing JWT tokens. Change this in production!
JWT_SECRET=your-secret-key-here
# JWT_EXPIRES_IN: Token expiration time (e.g., 7d, 24h)
JWT_EXPIRES_IN=7d

# Redis Configuration (Caching & Pub/Sub)
# REDIS_HOST: Hostname of the Redis server
REDIS_HOST=localhost
# REDIS_PORT: Port of the Redis server
REDIS_PORT=6379
# REDIS_PASSWORD: Password for Redis (optional, uncomment if needed)
# REDIS_PASSWORD=your-redis-password

# CORS Configuration
# CORS_ORIGIN: Allowed origin for Cross-Origin Resource Sharing (frontend URL)
CORS_ORIGIN=http://localhost:3001
